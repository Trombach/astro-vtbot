---
import { ViewTransitions } from 'astro:transitions';
const { frontmatter, title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<ViewTransitions />
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, minimum-scale=1" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{frontmatter?.title ?? title + ' | vtbot'}</title>
		<slot name="head" />
	</head>
	<body>
		<main>
			<slot />
		</main>
		<style is:global>
			html::view-transition-group(*) {
				animation-duration: 0.66s;
			}
			:root {
				background: linear-gradient(300deg, #ffffff, #e8f0f8);
				--vtbot-background-color: whitesmoke;
				background-color: var(--vtbot-background-color);
				--vtbot-color: darkslategray;
				--vtbot-accent: darkblue;
				color: var(--vtbot-color);
				--vtbot-table-background-color: #ececec;
			}
			a {
				color: var(--vtbot-color);
			}
			main {
				padding: 1ex 3ex;
			}
			@media (prefers-color-scheme: dark) {
				:root {
					background: linear-gradient(300deg, #000, #012);
					--vtbot-background-color: #012;
					--vtbot-color: #def;
					--vtbot-accent: #adf;
					--vtbot-table-background-color: rgb(37, 41, 45);
				}

				.shiki,
				.shiki span {
					color: var(--shiki-dark) !important;
					background-color: var(--shiki-dark-bg) !important;
					/* Optional, if you also want font styles */
					font-style: var(--shiki-dark-font-style) !important;
					font-weight: var(--shiki-dark-font-weight) !important;
					text-decoration: var(--shiki-dark-text-decoration) !important;
				}
			}

			:root {
				font-family: sans-serif;
			}
			code {
				font-size: 1rem;
				color: var(--vtbot-accent)
			}
			#contents + ul {
				font-family: sans-serif;
				background-color: var(--vtbot-table-background-color);
				padding: 1rem;
				border-radius: 10px;
				border: 1px dashed #ccc;
				box-shadow: 2px 2px 2px #5659;
			}
			#contents + ul,
			#contents + ul ul {
				margin: 0 0;
				padding: 1em;
			}
			#contents + ul,
			#contents + ul li {
				list-style: none;
			}

			#contents + ul a {
				text-decoration: none;
			}
			#contents + ul li::before {
				content: '↪︎ ';
			}

			img {
				margin: auto;
				display: block;
				width: min(80vw, 640px);
				height: min(39vw, 312px);
			}
			pre {
				padding: 1rem;
				border: 1px solid #888;
				border-radius: 6px;
				tab-size: 2;
			}
			td {
				background-color: var(--vtbot-table-background-color);
				font-family: sans-serif;
				font-size: 0.8rem;
				padding: 0.5rem;
			}
			h2,
			h3 {
				margin-top: 3rem;
			}
			body {
				max-width: 800px;
				padding: 3ex;
				margin: 0 auto;
			}
			p {
				hyphens: auto;
			}
		</style>
	</body>
</html>

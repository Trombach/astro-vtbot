---
import  CircleAnimation  from '~/src/CircleAnimation.astro';
import Layout from './Layout.astro';

interface Props {
	color: string;
}
const { color } = Astro.props;
---

<Layout title="Circle" {color}>
	<CircleAnimation slot="head" />
	<slot/>
</Layout>

<style is:global>
	body {
		cursor: pointer;
	}
	p {
		font-size: 36pt;
	}
</style>

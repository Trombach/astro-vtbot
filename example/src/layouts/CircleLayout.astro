---
import  CircleAnimation  from '~/src/CircleAnimation.astro';
import Layout from './Layout.astro';

interface Props {
	color: string;
}
const { color } = Astro.props;
---

<Layout title="Circle">
	<CircleAnimation slot="head" />
	<slot/>
</Layout>

<style is:global define:vars={{ color }}>
	body {
		background-color: var(--color);
		cursor: pointer;
	}
	p {
		font-size: 36pt;
	}
</style>
